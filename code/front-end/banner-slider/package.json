{
  "name": "banner-slider",
  "packageManager": "yarn@3.2.4",
  "type": "module",
  "scripts": {
    "copy": "cp -R src/assets dist/",
    "sass": "sass --watch src/style/sass/main.sass dist/style/css/main.css --style compressed",
    "tsc": "tsc -w",
    "tpg": "yarn pug -w src/*.pug -o dist" ,
    "server": "yarn copy; lite-server --baseDir=\"dist\"",
    "dev": "concurrently \"yarn sass\" \"yarn tpg\" \"yarn server\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "concurrently": "^7.6.0",
    "eslint": "^8.28.0",
    "lite-server": "^2.6.1",
    "pug": "^3.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.56.1",
    "typescript": "^4.9.3"
  }
}
